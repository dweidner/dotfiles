# zsh/functions/brew_orphans

#
# List all installed homebrew formulars and those depending on them.
#
# Usage: brew_orphans
#
brew_orphans() {
  brew list -1 | while read -r cask; do \
    echo -ne "\x1B[1;34m* $cask \x1B[0m\n"; \
    brew uses "$cask" --installed | awk '{printf("| %s \n", $0)}'; \
  done
}

# vim:syntax=zsh
