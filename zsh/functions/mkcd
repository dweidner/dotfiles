# zsh/functions/mkcd

#
# Create a given directory and change the switch to it.
#
# Usage: mkcd dir
#
# $1 = Directory to create.
#
mkcd() {
  if [ "$#" -eq 0 ]; then
    printf 'usage: %s <dir>\n' "$(basename $0)"
    return 1
  fi

  if [[ ! -d "$1" ]]; then
    command mkdir -p "$1"
  fi

  builtin cd "$1"
}

# vim:syntax=zsh
