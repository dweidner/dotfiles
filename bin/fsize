#!/usr/bin/env bash


#
# Determine the size of file or directory.
#
# usage: fsize [<path>]
#
fsize() {
  local -a options
  options+=( -sh )

  if du -b /dev/null >/dev/null 2>&1; then
    options+=( -b )
  fi

  if [[ -n "$*" ]]; then
    du "${options[*]}" -- "$@"
  else
    du "${options[*]}" .[^.]* ./*
  fi
}

fsize "$@"
