#!/usr/bin/env bash

readonly BASEDIR="$(dirname "$0")"
readonly DOTFILES="${DOTFILES:-$(dirname "$BASEDIR")}"

source "${DOTFILES}/shell/utilities.sh"


#
# Remove the index file of names found in source and header files generated
# for the current project.
#
# usage: rmtags [<path>]
#
rmtags() {
  local base

  if dot::in_git_repository; then
    base="$(git rev-parse --git-dir)"
  else
    base="$(pwd)"
  fi

  if [[ -f "${base}/tags" ]]; then
    rm -i "${base}/tags"
  fi
}

rmtags "$@"
