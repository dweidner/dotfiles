# git/config

[color]
	ui = auto
	interactive = auto

[init]
	tempaltedir = ~/.config/git/template

[commit]
	template = ~/.config/git/commitmsg

[pull]
	ff = only

[push]
	default = simple

[pull]
	rebase = false

[icdiff]
	options = --line-numbers --tabsize=4 --numlines=8

[pretty]
	nice = "format:%Cgreen%ad %Cred%h%Creset -%C(yellow)%d%Creset %s %Cblue[%cn]%Creset"

[include]
	path = ~/.config/git/aliases
