# git/config

[color]
	branch = auto
	diff = auto
	grep = auto
	interactive = auto
	status = auto
	ui = auto
	pager = true

[init]
	defaultBranch = main
	tempaltedir = ~/.config/git/template

[branch]
	autosetupmerge = always
	autosetuprebase = always

[commit]
	template = ~/.config/git/commitmsg

[diff]
	compactionHeuristic = true
	renames = true
	renameLimit = 12650

[difftool]
	prompt = false

[mergetool]
	prompt = false

[pager]
	status = true

[pull]
	ff = only

[push]
	default = simple

[pull]
	rebase = false

[pretty]
	nice = "format:%Cgreen%ad %Cred%h%Creset -%C(yellow)%d%Creset %s %Cblue[%cn]%Creset"

[rebase]
	stat = true

[include]
	path = ~/.config/git/aliases

[include]
	path = ~/.local/gitconfig
