[color]
  ui = auto
  interactive = auto

[core]
  excludesfile = ~/.gitignore
  attributesfile = ~/.gitattributes

[pretty]
  # %h <short-sha>
  # %s <commit-message>
  # %d <pointer-names>
  # %an <commit-author-name>
  # %ar <relative-time>
  nice = "format:%C(yellow)%h%C(reset) %C(red)%d%C(reset) %s -- %C(blue)%an%C(reset); %ar"

[push]
  default = simple

[alias]
  # Basic shortcuts
  br = branch
  ci = commit
  cl = clone --recursive
  cp = cherry-pick
  co = checkout
  di = diff
  ec = config --global -e
  me = merge
  mt = mergetool
  st = status -s

  # Search files under version control
  gr = grep --break --heading --line-number

  # Logging
  ls = log --pretty=nice --decorate
  ll = log --pretty=nice --decorate --numstat --no-renames
  lg = log --pretty=nice --decorate --numstat --no-renames --graph
  mrc = log --pretty=nice --decorate --numstat --no-renames -1

  # List branches, tags and remotes
  tags = tag -l
  branches = branch -a
  remotes = remote -v
  contributors = shortlog --summary --numbered

  # Tools/Helpers
  ignore-changes = update-index --asume-unchanged
  track-changes = update-index --no-assume-unchanged
  gitignore = "!gi() { curl -L -s https://www.gitignore.io/api/$@; }; gi"

[grep]
  extendregexp = true

[diff]
  tool = opendiff

[difftool]
  prompt = false

[merge]
  tool = opendiff
