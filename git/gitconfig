[color]
  ui = auto
  interactive = auto

[core]
  excludesfile = ~/.gitignore
  attributesfile = ~/.gitattributes

[pretty]
  # %h <short-sha>
  # %s <commit-message>
  # %d <pointer-names>
  # %an <commit-author-name>
  # %ar <relative-time>
  nice = "format:%C(yellow)%h%C(reset) %C(red)%d%C(reset) %s -- %C(blue)%an%C(reset); %ar"

[push]
  default = simple

[alias]
    # Basic shortcuts
    b  = branch
    d  = diff
    m  = merge
    mt = mergetool
    am = commit --amend
    cl = clone --recursive
    ci = commit
    ca = !git add --all && git commit -m
    co = checkout
    ec = config --global -e
    st = status -s
    up = !git pull --rebase --prune $@ && git submodule update --init --recursive

    # Logging
    ls = log --pretty=nice --decorate
    ll = log --pretty=nice --decorate --numstat --no-renames

    # List branches, tags and remotes
    tags = tag -l
    branches = branch -a
    remotes = remote -v
    contributors = shortlog --summary --numbered

    # Tools/Helpers
    gitignore = "!gi() { curl -L -s https://www.gitignore.io/api/$@; }; gi"

[diff]
  tool = opendiff

[difftool]
  prompt = false

[merge]
  tool = opendiff
