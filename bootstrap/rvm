#!/usr/bin/env bash
#
# @file Install Ruby Version Manager.

set -e

#
# Download and install the Ruby Version Manager.
#
# usage: install [<path>]
#
install() {
  local path="${1:-$HOME/.local/share/rvm}"

  curl -sSL https://get.rvm.io \
    | bash -s -- --path "$path" --ignore-dotfiles --ruby
}

install "$@"
